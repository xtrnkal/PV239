<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/task_fragment_container">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/gray"
            android:paddingVertical="15dp"
            android:text="Choose your task"
            android:textAlignment="center"
            android:textColor="@color/dark_purple"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="136dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:text="Housework"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/brain1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_brain"
                    android:text="" />

                <Button
                    android:id="@+id/gears1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gears"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="136dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:text="Study"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/brain2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_brain"
                    android:text="" />

                <Button
                    android:id="@+id/gears2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gears"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="136dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:text="Coding"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/brain3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_brain"
                    android:text="" />

                <Button
                    android:id="@+id/gears3"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gears"
                    android:text="" />

            </LinearLayout>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:text="+ Add new task" />

        </LinearLayout>



</LinearLayout>